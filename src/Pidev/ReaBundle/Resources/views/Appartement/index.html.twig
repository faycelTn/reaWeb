{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Appartement list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Etage</th>
                <th>Nbrchambre</th>
                <th>Nbrsalledebain</th>
                <th>Nbrcuisine</th>
                <th>Nbrsallon</th>
                <th>Nbrsuite</th>
                <th>Balcon</th>
                <th>Meuble</th>
                <th>Chauffage</th>
                <th>Climatisation</th>
                <th>Parking</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('appartement_show', { 'id': entity.idoffre }) }}">{{ entity.etage }}</a></td>
                <td>{{ entity.nbrchambre }}</td>
                <td>{{ entity.nbrsalledebain }}</td>
                <td>{{ entity.nbrcuisine }}</td>
                <td>{{ entity.nbrsallon }}</td>
                <td>{{ entity.nbrsuite }}</td>
                <td>{{ entity.balcon }}</td>
                <td>{{ entity.meuble }}</td>
                <td>{{ entity.chauffage }}</td>
                <td>{{ entity.climatisation }}</td>
                <td>{{ entity.parking }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('appartement_show', { 'id': entity.idoffre }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('appartement_edit', { 'id': entity.idoffre }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('appartement_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
